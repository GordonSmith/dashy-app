{
    "compilerOptions": {
        "outDir": "./lib-cjs",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./types",
        "noEmitOnError": false,
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "importHelpers": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "lib": [
            "dom",
            "es6",
            "es2016"
        ],
        "types": []
    },
    "include": [
        "src/**/*"
    ]
}